{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"module": "commonjs",
		"rootDir": "./src",
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"removeComments": true,
		"importsNotUsedAsValues": "remove",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"resolveJsonModule": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
